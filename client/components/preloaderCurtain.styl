.preloaderCurtain
  position fixed
  top 0
  bottom 0
  left 0
  right 0
  background rgba(0, 0, 0, .9)
  opacity 0
  visibility hidden
  transition opacity 500ms ease-in-out 0ms,
             visibility 0ms linear 500ms
  &--isShown
    opacity 1
    visibility visible
    transition opacity 500ms ease-in-out 0ms,
               visibility 0ms linear 0ms
  &__preloader
    position absolute
    top 50%
    margin -32px auto 0
